{
    "name": "B站强制开启全景视角",
    "version": "2020",
    "manifest_version": 2,
    "content_scripts": [
        {
          "matches": ["https://www.bilibili.com/video/*","https://www.bilibili.com/bangumi/play/*"],
          "js": ["bg.js"],
          "run_at": "document_start",
          "all_frames": true
        }
    ],
    "permissions":
    [
        "https://www.bilibili.com/video/*",
        "https://www.bilibili.com/bangumi/play/*"
    ]
}